	rm -f $@
	$(C++) -o $@ $(CFLAGS) mkbv.c $(STATIC)

rgb-cube.ppm: mkcube
	rm -f $@
	./mkcube rgb > $@

yuv-map.ppm: mkcube
	rm -f $@
	./mkcube -Y $(ED_YBITS) -U 45 -V 45 yuv > $@

