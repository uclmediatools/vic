	rm -f $@
	./ppmtolut -n cube rgb-cube.ppm >> $@
	./ppmtolut -n jv_cube jv-cube-128.ppm >> $@

cm1.o: cm1.c
cm1.c: yuv-map.ppm cm170.ppm
	rm -f $@
	./ppmtolut -n quant cm170.ppm >> $@
	./ppmtolut -Y $(ED_YBITS) -n ed -e yuv-map.ppm >> $@

